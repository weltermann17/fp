package com.ibm.fp

object LazyEvaluation extends App {

  // trivial example

  lazy val x = {
    println("We do not like side effects, but produce them all the time.")
    (1 to 1000000).foldLeft(0) { case (l, e) => l + e }
  }

  println("start computing, x is not yet evaluated")
  println("x (1) = " + x)
  println("x (2) = " + x)

}