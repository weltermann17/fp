package com.ibm.fp

object LambdaCalculus extends App {

  def sleep(i: Int) = Thread.sleep(i)

  def λ(b: => Unit) = new Thread(new Runnable { def run = b }).start

  // examples
  
  λ((1 to 100).foreach { i => println(i); sleep(1000) })

  λ(('A' to 'Z').foreach { i => println(i); sleep(500) })

}