package com.ibm.fp.scala

object ParallelComputing extends App {

  def measure(body: => Unit) = { val b = System.nanoTime; body; println((System.nanoTime - b) / 1000000000.0 + " sec") }

  def linear = {

    val l = (1 to 1000000).toList

    val sum = l.foldLeft(0) { case (l, e) => l + e }

  }

  def parallel = {

    val l = (1 to 1000000).toList.par

    val sum = l.foldLeft(0) { case (l, e) => l + e }

  }

  measure(linear)
  measure(parallel)

}